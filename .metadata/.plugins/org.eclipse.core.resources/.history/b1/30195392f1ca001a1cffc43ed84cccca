package Entities;

import Utils.Constants;

public class CurrencyConverter {

	public static double dollarNow;
	public static double qtdDollar;
	
	public static double currency () {
		double GrossReal = dollarNow * qtdDollar;
		double liquidReal = (GrossReal * Constants.IOF) + GrossReal;
		return liquidReal;
	}
	
	public String toString() {
		return "Amount to be paid in reais = " + String.format("%.2f%n", currency());
	} 
	
}
